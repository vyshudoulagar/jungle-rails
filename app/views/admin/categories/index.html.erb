<div class="container mt-5">
  <div class="row">
    <div class="col-md-12">
      <h1 class="mb-4">Categories</h1>
      <table class="table table-striped">
        <thead class="thead-dark">
          <tr>
            <th>Name</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="mt-3">
        <%= link_to 'New Category', new_admin_category_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
